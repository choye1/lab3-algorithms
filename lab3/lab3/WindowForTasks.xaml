<Window x:Class="lab3.WindowForTasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="WindowForTasks" Height="450" Width="800">
    <Grid>
        <TextBox  Width="96"  VerticalAlignment="Top" HorizontalAlignment="Left" x:Name="NumberOfTask" Margin="19,50,0,0"/>
        <TextBlock IsHitTestVisible="False" Text="Номер Задания" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24,51,0,0" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=NumberOfTask}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBox  Width="250"  VerticalAlignment="Top" HorizontalAlignment="Left" KeyDown="tbTaskKeydown" x:Name="List1" Margin="124,50,0,0"/>
        <TextBlock IsHitTestVisible="False" Text="Список 1" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Margin="137,51,0,0" Foreground="DarkGray" Width="224">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=List1}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBox  Width="250"  VerticalAlignment="Top" HorizontalAlignment="Left" KeyDown="tbTaskKeydown" x:Name="List2" Margin="385,50,0,0"/>
        <TextBlock IsHitTestVisible="False" Text="Список 2 / аргументы для задания."  VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Margin="398,51,0,0" Foreground="DarkGray" Width="224">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=List2}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button Content="Button" HorizontalAlignment="Left" Height="18" Margin="640,50,0,0" VerticalAlignment="Top" Width="139" Click="BtStartFourPart"/>
        <TextBox Name ="TbOut" HorizontalAlignment="Left" Height="131" Margin="19,86,0,0" VerticalAlignment="Top" Width="616" IsReadOnly="True"/>
        <TextBox  Width="250"  VerticalAlignment="Top" HorizontalAlignment="Left" x:Name="tbRpnIn" KeyDown="tbCommandKeydown" Margin="176,294,0,0"/>
        <TextBlock IsHitTestVisible="False" Text="Выражение для RPN" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Margin="189,294,0,0" Foreground="DarkGray" Width="217" Height="18">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=tbRpnIn}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button Content="Button" HorizontalAlignment="Left" Height="18" Margin="457,294,0,0" VerticalAlignment="Top" Width="138" Click="BtStartRPN"/>




    </Grid>
</Window>
